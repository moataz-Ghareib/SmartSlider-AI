# ===== Frontend Environment Variables (VITE_*) =====
# متغيرات مرئية في المتصفح - تأكد من أنها آمنة

# Google Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# إعدادات التطبيق
VITE_APP_NAME=SmartStartAI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_API_BASE=https://smartstartai-backend-production.up.railway.app
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_VOICE=true

# (تمت إزالة Supabase)

# ===== Backend Environment Variables =====
# متغيرات محمية - لا تكشفها في Frontend

# OpenAI API (إلزامي)
OPENAI_API_KEY=your_openai_api_key_here

# نماذج OpenAI
CHAT_MODEL=gpt-4o-mini
TTS_MODEL=tts-1
STT_MODEL=whisper-1
TTS_VOICE=alloy

# أمان Backend
ALLOWED_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# حدود التكلفة والأداء
MAX_TOKENS_PER_REQ=12000
DAILY_BUDGET_USD=30
MAX_TTS_SECONDS_PER_SESSION=45
MAX_STT_SECONDS_PER_SESSION=120
RATE_LIMIT_RPM=15

# إعدادات الأمان والخصوصية
PDPL_SAFE_MODE_DEFAULT=true
SANITIZE_OUTPUTS=true
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=90

# ===== Database Configuration =====
# PostgreSQL (للإنتاج)
POSTGRES_DB=smartstart_db
POSTGRES_USER=smartstart_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (للتخزين المؤقت)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===== Docker Configuration =====
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# ===== External Services =====
# البريد الإلكتروني
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@smartstart-ai.net

# مراقبة الأخطاء (Sentry)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ENVIRONMENT=development
